            @Html.DisplayFor(modelItem => item.ExamDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VisitPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patient.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.LabExamID }) |
            @Html.ActionLink("Details", "Details", new { id=item.LabExamID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.LabExamID })
        </td>
    </tr>
